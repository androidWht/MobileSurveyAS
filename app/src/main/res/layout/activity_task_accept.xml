<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C9C9C9"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            style="@style/accept_task_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:gravity="center"
            android:padding="5dip"
            android:text="接收任务" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loss_layout"
        android:layout_below="@+id/titleLayout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="基本信息"
                    android:textColor="#000000"
                    android:textSize="20dip" >
                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="3dip" >

                            <TextView
                                style="@style/refuse_task_content"
                                android:layout_width="wrap_content"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_head_title"
                                android:text="报  案  号：" >
                            </TextView>

                            <EditText
                                android:id="@+id/accept_report_no"
                                style="@style/refuse_task_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_content_title"
                                android:hint="报案号" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/refuse_task_content"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:background="@drawable/new_item_head_title"
                            android:text="出险时间：" >
                        </TextView>

                        <EditText
                            android:id="@+id/accept_accident_time"
                            style="@style/refuse_task_edit"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_marginRight="3dip"
                            android:background="@drawable/new_item_content_title"
                            android:hint="出险时间" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="3dip" >

                            <TextView
                                style="@style/refuse_task_content"
                                android:layout_width="wrap_content"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_center"
                                android:text="报  案  人：" >
                            </TextView>

                            <EditText
                                android:id="@+id/accept_reporter"
                                style="@style/refuse_task_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_content_center"
                                android:hint="报案人" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/refuse_task_content"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:background="@drawable/new_item_bottom_bg"
                            android:text="报案时间：" >
                        </TextView>

                        <EditText
                            android:id="@+id/accept_report_time"
                            style="@style/refuse_task_edit"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_marginRight="3dip"
                            android:background="@drawable/new_item_content_bottom"
                            android:hint="报案时间" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="3dip" >

                            <TextView
                                style="@style/refuse_task_content"
                                android:layout_width="wrap_content"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_bottom_bg"
                                android:text="联系电话：" >
                            </TextView>

                            <EditText
                                android:id="@+id/accept_phone"
                                style="@style/refuse_task_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_content_bottom"
                                android:hint="联系电话" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text="出险信息"
                        android:textColor="#000000"
                        android:textSize="20dip" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="3dip"
                        android:paddingRight="3dip" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/refuse_task_content"
                                android:layout_width="wrap_content"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_head_title"
                                android:gravity="center"
                                android:text="出险原因：" >
                            </TextView>

                            <EditText
                                android:id="@+id/accept_accident_reason"
                                style="@style/refuse_task_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_content_title"
                                android:hint="出险原因" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/refuse_task_content"
                                android:layout_width="wrap_content"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_bottom_bg"
                                android:gravity="center"
                                android:text="出险地点：" >
                            </TextView>

                            <EditText
                                android:id="@+id/accept_accident_addr"
                                style="@style/refuse_task_edit"
                                android:layout_width="fill_parent"
                                android:layout_height="40dip"
                                android:background="@drawable/new_item_content_bottom"
                                android:hint="出险地点" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dip" >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- 底部按钮 -->
    <!-- footer layout start -->

    <LinearLayout
        android:id="@+id/loss_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:id="@+id/acceptCallTaskBtn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/sm_unin_btn_bg"
            android:gravity="center"
            android:text="接收调度"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <Button
            android:id="@+id/accpetTaskVackBtn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="@drawable/sm_unin_btn_bg"
            android:gravity="center"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>
    <!-- footer layout end -->

</RelativeLayout>